<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bob.springboot.country.mapper.CountryMapper">

    <insert id="save" useGeneratedKeys="true" keyProperty="id" parameterType="com.bob.springboot.country.model.Country">
        insert into country (countryname, countrycode) values (#{countryname}, #{countrycode})
    </insert>

    <insert id="update" parameterType="com.bob.springboot.country.model.Country">
        update country set
            countryname = #{countryname},
            countrycode = #{countrycode}
        where id = #{id}
    </insert>
</mapper>